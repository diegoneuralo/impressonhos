<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="impressonhos"><!-- transaction-type="JTA" -->
	
		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<!-- openshift -->
		<!-- <jta-data-source>java:jboss/datasources/PostgreSQLDS</jta-data-source> -->
	
		<!-- comment this when openshift is being used -->
		<jta-data-source>java:jboss/datasources/postgresDS</jta-data-source> 

		<class>br.com.impressonhos.entity.AgregadoEvento</class>
		<class>br.com.impressonhos.entity.Cardapio</class>
		<class>br.com.impressonhos.entity.ClienteEvento</class>
		<class>br.com.impressonhos.entity.Contratante</class>
		<class>br.com.impressonhos.entity.Contrato</class>
		<class>br.com.impressonhos.entity.Convidado</class>
		<class>br.com.impressonhos.entity.Convite</class>
		<class>br.com.impressonhos.entity.Endereco</class>
		<class>br.com.impressonhos.entity.Evento</class>
		<class>br.com.impressonhos.entity.ItemEvento</class>
		<class>br.com.impressonhos.entity.Local</class>
		<class>br.com.impressonhos.entity.MaterialEvento</class>
		<class>br.com.impressonhos.entity.ModeloConvite</class>
		<class>br.com.impressonhos.entity.Pessoa</class>
		<class>br.com.impressonhos.entity.Telefone</class>
		<class>br.com.impressonhos.entity.Uf</class>
		<class>br.com.impressonhos.entity.User</class>
		
		<properties>
			<!-- never comment -->
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.show_sql" value="true" />
			
			<!-- comment this when openshift is being used -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" /> 
			<property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/postgres" /> 
			<property name="hibernate.connection.driver_class" value="org.postgresql.Driver" />
			<property name="hibernate.connection.username" value="postgres" />
			<property name="hibernate.connection.password" value="root" />			
		</properties>
		
	</persistence-unit>
	
</persistence>